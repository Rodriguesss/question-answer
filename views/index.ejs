      <hr>
      <h1>Perguntas <a href="/perguntar" class="btn btn-success botao-pergunta">Perguntar</a></h1>
      <hr>

    <% perguntas.forEach(pergunta => { %>
      <br/>
      <div class="card">
        <div class="card-body">
            <h3><%= pergunta.titulo %></h3>
        </div>
        <div class="card-footer">
            <button class="btn btn-success">Responder</button>
        </div>
      </div>
    <% }); %>

  </div>
</body>
